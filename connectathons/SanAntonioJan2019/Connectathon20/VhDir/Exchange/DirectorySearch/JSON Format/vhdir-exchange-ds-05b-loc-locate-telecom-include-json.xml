	<test id="01-LocationSearchName">
		<name value="LocationSearchName"/>
		<description value="Search Location using the name search parameter with the provided name data value and _include of Endpoint."/>

		<action>
			<operation>
				<type>
					<system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
					<code value="search"/>
